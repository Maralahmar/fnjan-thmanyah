generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Podcast {
  id          Int       @id @default(autoincrement())
  trackId     BigInt    @unique
  name        String?
  artistName  String?
  artworkUrl  String?
  feedUrl     String?
  genre       String?
  country     String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Episode {
  id          Int       @id @default(autoincrement())
  trackId     BigInt    @unique
  name        String?
  artistName  String?
  artworkUrl  String?
  description String?
  duration    Int?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}
